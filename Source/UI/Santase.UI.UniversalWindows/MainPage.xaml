            <local:CardControl x:Name="TrumpCard" HorizontalAlignment="Left" Margin="91.62,306.066,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
                <local:CardControl.RenderTransform>
                    <CompositeTransform Rotation="90"/>
