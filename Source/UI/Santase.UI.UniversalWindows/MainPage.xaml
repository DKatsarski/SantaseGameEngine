            <local:CardControl x:Name="PlayerCard6" HorizontalAlignment="Left" Margin="797,608,0,0" VerticalAlignment="Top" Tapped="PlayerCardTapped"/>
            <local:CardControl x:Name="Control07" HorizontalAlignment="Left" Margin="72,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.623,1.439"/>
